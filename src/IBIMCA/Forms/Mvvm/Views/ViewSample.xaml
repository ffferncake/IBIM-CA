<Window
    x:Class="IBIMCA.Forms.Mvvm.Views.ViewSample"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:viewModel="clr-namespace:IBIMCA.Forms.Mvvm.Models"
    mc:Ignorable="d"
    ResizeMode="CanResize"
    WindowStartupLocation="CenterScreen"
    Title="MVVM EXAMPLE"
    MinHeight="150"
    MinWidth="350"
    Height="150"
    Width="350">

    <!-- SHARED STYLING -->
    <Window.Resources>
        <ResourceDictionary Source="/IBIMCA;component/Resources/SharedStyles.xaml" />
    </Window.Resources>
    
    <!-- MAIN GRID -->
    <Grid VerticalAlignment="Center"
          Margin="8">
        
        <!-- 4 ROWS -->
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <!-- 2 COLUMNS -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="90" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        
        <!-- ROW 1: NAME -->
        <TextBlock Grid.Row="0"
                   Grid.Column="0"
                   Text="NAME:"
                   Style="{StaticResource TextBlock_LabelBold}"/>
        <TextBlock Grid.Row="0" 
                   Grid.Column="1"
                   Margin="8 0 0 0"
                   Text="{Binding StrBind_Element}"
                   TextWrapping="Wrap"/>
        
        <!-- ROW 2: CATEGORY -->
        <TextBlock Grid.Row="1"
                   Grid.Column="0"
                   Text="CATEGORY:"
                   Style="{StaticResource TextBlock_LabelBold}"/>
        <TextBlock Grid.Row="1"
                   Grid.Column="1"
                   Margin="8 0 0 0"
                   Text="{Binding StrBind_Category}"
                   TextWrapping="Wrap" />
        
        <!-- ROW 3: STATUS -->
        <TextBlock Grid.Row="2"
                   Grid.Column="0"
                   Text="STATUS:"
                   Style="{StaticResource TextBlock_LabelBold}"/>
        <TextBlock Grid.Row="2"
                   Grid.Column="1"
                   Text="{Binding StrBind_Status}" />
        
        <!-- ROW 4: BUTTON GRID -->
        <Grid Grid.Row="3"
              Grid.Column="0"
              Grid.ColumnSpan="2"
              Margin="0 12 0 0">
            
            <!-- 3 COLUMNS (1 ROW) -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            
            <!-- SUMMARY BUTTON -->
            <Button Grid.Column="0"
                    Height="30" Margin="0 0 4 0"
                    Content="SUMMARY"
                    Command="{Binding CmdBind_ShowSummaryCommand}" />

            <!-- DELETE BUTTON -->
            <Button Grid.Column="1"
                    Height="30" Margin="4 0 4 0"
                    Content="DELETE"
                    Command="{Binding CmdBind_DeleteElementCommand}" />

            <!-- SELECTION BUTTON -->
            <Button Grid.Column="2"
                    Height="30"
                    Margin="4 0 0 0"
                    Content="SELECT"
                    Command="{Binding CmdBind_SelectDelayedElementCommand}" />
        </Grid>
    </Grid>
</Window>